
<div class="profile-header">
    <%= cl_image_tag @user.profile_image, class: "avatar-profile mr-2" %>
    <h1 class="h1-profile-wm"><%= @user.first_name %> <%= @user.last_name %></h1>
</div>
<div class="container">
  <div class="col-4 offset-4">
    <ul class="nav nav-pills mb-4 mt-4" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-about-tab" data-toggle="pill" href="#pills-about" role="tab" aria-controls="pills-about" aria-selected="true">About me</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-journey-tab" data-toggle="pill" href="#pills-journey" role="tab" aria-controls="pills-journey" aria-selected="false">Accompany Journey</a>
      </li>
    </ul>
  </div>


    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-about" role="tabpanel" aria-labelledby="pills-about-tab">
        <%= render 'about'%>
      </div>
      <div class="tab-pane fade" id="pills-journey" role="tabpanel" aria-labelledby="pills-journey-tab">
        <%= render 'journey'%>
      </div>
    </div>
</div>

<%= simple_form_for [@user, @review] do |f| %>
          <%= f.input :rating %>
          <%= f.input :description %>
          <%= f.submit "rate", class: "btn custom" %>
<% end %>


