 <div class="container">
   <div class="row">
    <div class="col-12 col-mb-6 col-lg-6 mt-3 offset-3">
     <div class="card-event-company-connection mb-1 mt-1 start">
      <%= image_tag "logo_green.png", class: "logo-journey-start" %>
    </div>
    <% @user.events.order(:date).each do |event| %>
         <div class="card-event-company-connection mb-1 mt-1">
        </div>
        <div class="card-event-company">
          <div class="d-flex">
             <%# image_tag event.event_image, class: "avatar-large mr-2" %>
            <div class="card-event-company-content">
              <p><span class="p-question">Event? </span><%= event.name %></p>
              <p><span class="p-question">Host? </span><%= @user.first_name %></p>
              <p><span class="p-question">When? </span><%= event.date %></p>

              <% companion = event.approved_companion %>

              <% if companion %>
                <p><span class="p-question">Companions? </span><%= @user.first_name%> & <%= companion.first_name %></p>
              <% else %>
                <p><span class="p-question">Companions? </span><%= @user.first_name%> & TBD ☺️ </p>
              <% end %>


            </div>
          </div>
          <div class="card-event-company-actions">
            <%= link_to event_path(event) do %>
              <i class="far fa-calendar-check"></i>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Would need a joined table to sort for date -->
     <% @user.bookings.order(:created_at).each do |booking| %>
        <div class="card-event-company-connection mb-1 mt-1">
        </div>
        <div class="card-event-request">
          <div class="d-flex">
            <div class="card-event-ahead-content">
              <p><span class="p-question">Event? </span><%= booking.event.name %></p>
              <p><span class="p-question">Host? </span><%= booking.event.user.first_name %></p>
              <p><span class="p-question">When? </span><%= booking.event.date %></p>
              <p><span class="p-question">Companions? </span><%= booking.event.user.first_name %> & <%= @user.first_name %></p>
            </div>
          </div>
          <div class="card-event-company-actions journey">
            <%= link_to event_path(booking.event) do %>
              <i class="far fa-calendar-check"></i>
            <% end %>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>
