
<div class="bannerevent" style='background-image: url("<%= @event.event_image.url ? @event.event_image.url : @def %>")'> </div>
<div class="container">



  <div class="row">

    <!-- show the event_image -->
    <!-- show the tags for event_category (model not created yet) on the image -->
    <!-- show event details below-->
      <!--
       t.string "name"
       t.string "location"
       t.date "date"
       t.string "amenities"
       t.string "event_description"
       t.string "wishlist"
       t.string "cost"
      -->
    <!-- show booking new-->
      <!-- form motivation field -->
      <!-- form button submit -->
        <!--
           t.bigint "user_id"
           t.bigint "event_id"
           t.boolean "approved"
           t.string "motivation"
        -->
    <div class="col-12 col-lg-6">
      <div class="event-detail-card">
        <div id="containerIntro">
          <h2><%= @event.name %></h2>
          <p>at <%= @event.address %> on <%= @event.date %></p>
          <hr>
        </div>
          <div class="mt-3">
          <p><%= @event.event_description %></p>
          <hr>
          <p><strong>Includes: </strong><%= @event.amenities %></p>
          <p><strong>Looking for: </strong><%= @event.wishlist %></p>
          <p><strong>Cost: </strong><%= @event.cost %></p>
        </div>
      </div>
      <% if current_user.id != @event.user.id %>
        <% if @event.bookings.where(user_id: current_user.id).empty? %>
          <%= simple_form_for [@event, @booking] do |f| %>
            <%= f.input :motivation %>
            <%= f.submit "Book this event", class: "btn custom" %>
          <% end %>
        <% elsif @event.bookings.where(user_id: current_user.id).first.approved %>
          <p id="booked-box">Your request has been approved ğŸ¥³, please refer to your dashboard for contact detais.</p>
        <% elsif @event.bookings.where(user_id: current_user.id).first.approved.nil? %>
          <p id="booked-box">Your request is pending approval ğŸ§...</p>
        <% else %>
          <p id="booked-box">Your request has been declined ğŸ™ƒ, maybe next time!</p>
        <% end %>
      <% else %>
      <% end %>
    </div>



    <!-- show on right side user_id -->
    <!-- show avatar profile_image -->
      <!--
         t.string "first_name"
         t.string "last_name"
         t.string "city"
         t.string "description"
         t.string "height"
         t.string "strength"
         t.string "language"
         t.string "hidden_talent"
         t.integer "talkativeness"
         t.integer "funniness"
         t.string "username"
         t.integer "age"
         t.string "gender"
       -->
    <div class="col-12 col-lg-6">

      <div class="event-detail-card">
        <div class="d-flex justify-content-start">
          <%= image_tag @user.profile_image, {class: "rounded-circle", width: 70, height: 70} %>
          <div>
            <h4 class="ml-3 mt-2"><%= @user.username.capitalize %></h4>
            <div id="containerBio">
              <i class="fas fa-map-pin ml-3"></i>
              <p class="ml-1"><%= @user.city %></p>
            </div>
          </div>
        </div>
        <hr>
        <p class="font-weight-bold">About me</p>
        <p><%= @user.description %></p>
        <p>Height:
          <span class="font-weight-lighter"> <%= @user.height %>m</span>
        </p>
        <p>Attributes:
          <span class="font-weight-lighter"> <%= @user.strength %> </span>
        </p>
        <p>Languages:
          <span class="font-weight-lighter"><%= @user.language %> </span>
        </p>
        <p>Hidden Talent:
          <span class="font-weight-lighter"><%= @user.hidden_talent %></span>
        </p>
        <p>Talkativeness:
          <span class="font-weight-lighter"><%= @user.talkativeness %></span>
        </p>
        <p>Funniness:
          <span class="font-weight-lighter"><%= @user.funniness%> </span>
        </p>
        <p>Age:
          <span class="font-weight-lighter"><%= @user.age %></span>
        </p>
      </div>
    </div>

  </div>
</div>








