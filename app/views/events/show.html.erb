
<div class="bannerevent" style='background-image: linear-gradient(
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.4)
    ), url("<%= @event.event_image.file.nil? ? @event.event_category.default_image : @event.event_image %>")'>
  <div class="container">
    <h1 class="bannerevent-text text-light"><%= @event.event_category.name %></h1>
  </div>
</div>

<div class="container margin-top-negative-show">



  <div class="row">

    <!-- show the event_image -->
    <!-- show the tags for event_category (model not created yet) on the image -->
    <!-- show event details below-->
      <!--
       t.string "name"
       t.string "location"
       t.date "date"
       t.string "amenities"
       t.string "event_description"
       t.string "wishlist"
       t.string "cost"
      -->
    <!-- show booking new-->
      <!-- form motivation field -->
      <!-- form button submit -->
        <!--
           t.bigint "user_id"
           t.bigint "event_id"
           t.boolean "approved"
           t.string "motivation"
        -->
    <div class="col-12 col-lg-7">

      <div class="show-detail-card">
        <div class="show-position-absolute">
          <% if @event.cost == "0" || "" %>
            <p>Free</p>
          <% else %>
            <p><span class="font-weight-lighter"></span><%= @event.cost %>$</p>
          <% end %>
        </div>
        <div class="show-position-relative">
          <div id="containerIntro">
            <h3><%= @event.name %></h3>
            <p>at <span class=font-weight-lighter><%= @event.address %></span> on <span class=font-weight-lighter><%= @event.date %></span></p>
            <hr>
          </div>
          <div class="mt-3">
            <p><%= @event.event_description %></p>
            <hr>

            <div class="d-flex justify-content-left">
              <p>
                <span class="font-weight-lighter mr-4">What's included? </span>
              </p>

              <% if @event.amenities == "Flight included"%>
              <!-- "Flight included", "Hotel included", "Meals included" -->
                <div class="d-flex justify-content-center">
                  <i class="fas fa-plane pr-3" style="color:#46C190; font-size:20px;"></i>
                  <i class="fas fa-hotel pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-utensils pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                </div>
              <% elsif  @event.amenities == "Hotel included" %>
                <div class="d-flex justify-content-center">
                  <i class="fas fa-plane pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-hotel pr-3" style="color:#46C190; font-size:20px;"></i>
                  <i class="fas fa-utensils pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                </div>
              <% elsif  @event.amenities == "Meals included" %>
                <div class="d-flex justify-content-center">
                  <i class="fas fa-plane pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-hotel pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-utensils pr-3" style="color:#46C190; font-size:20px;"></i>
                </div>
              <% else %>
                <div class="d-flex justify-content-center">
                  <i class="fas fa-plane pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-hotel pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                  <i class="fas fa-utensils pr-3" style="color:#8A8A8A; font-size:20px;"></i>
                </div>
              <% end %>
            </div>

            <p><span class="font-weight-lighter mr-4">What am I looking for? </span><%= @event.wishlist %></p>
          </div>
        </div>
      </div>

      <% if current_user.id != @event.user.id %>
        <div class="show-detail-card">
            <% if @event.bookings.where(user_id: current_user.id).empty? %>
              <%= simple_form_for [@event, @booking] do |f| %>
                <%= f.input :motivation %>
                <%= f.submit "Book this event", class: "btn custom", id: "approve-request-sweet" %>
              <% end %>
            <% elsif @event.bookings.where(user_id: current_user.id).first.approved %>
              <span class="font-weight-lighter mr-4">Booking status: </span>
              <span id="booked-box">Your request has been approved ü•≥, please refer to your dashboard for contact detais.</span>
            <% elsif @event.bookings.where(user_id: current_user.id).first.approved.nil? %>
              <span class="font-weight-lighter mr-4">Booking status: </span>
              <span class="text-warning" id="booked-box">Your request is pending approval üßê...</span>
            <% else %>
              <span class="font-weight-lighter mr-4">Booking status: </span>
              <span class="text-danger" id="booked-box">Your request has been declined üôÉ, maybe next time!</span>
            <% end %>
        </div>
      <% end %>

    </div>



    <!-- show on right side user_id -->
    <!-- show avatar profile_image -->
      <!--
         t.string "first_name"
         t.string "last_name"
         t.string "city"
         t.string "description"
         t.string "height"
         t.string "strength"
         t.string "language"
         t.string "hidden_talent"
         t.integer "talkativeness"
         t.integer "funniness"
         t.string "username"
         t.integer "age"
         t.string "gender"
       -->

    <div class="col-12 col-lg-5">

      <div class="show-detail-card">
        <div id="map"
          style="width: 100%; height: 250px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>

      <div class="show-detail-card">

        <div class="d-flex justify-content-start">
          <%= link_to profile_path(@user) do %>
          <%= cl_image_tag @user.profile_image, {class: "rounded-circle", width: 70, height: 70} %>
          <% end %>
          <div>
            <h5 class="ml-3 mt-2">Hosted by <strong><%= @user.first_name.capitalize %></strong></h5>
            <div id="containerBio">
              <i class="fas fa-map-pin ml-3"></i>
              <p class="font-weight-lighter ml-1"><%= @user.city %></p>
            </div>

          </div>
        </div>

        <hr>
        <!-- <p class="font-weight-bold">About me</p> -->
        <p><%= @user.description %></p>

        <div class="d-flex justify-content-start">
          <div>
            <p class="font-weight-lighter">Strengths</p>
            <p class="font-weight-lighter">Languages</p>
            <p class="font-weight-lighter">Talent</p>
            <p class="font-weight-lighter">Age</p>
            <p class="font-weight-lighter">Height</p>
            <p class="font-weight-lighter">Talkativeness</p>
            <p class="font-weight-lighter">Funniness</p>
          </div>
          <div class="pl-5">
            <p> <%= @user.strength %></p>
            <p><%= @user.language %></p>
            <p><%= @user.hidden_talent %></p>
            <p><%= @user.age %></p>
            <p> <%= @user.height %> m</p>
            <p class="pt-1"><input type="range" min="0" max="5" name="sld" value="<%= @user.talkativeness %>" disabled></p>
            <p class="pt-1"><input type="range" min="0" max="5" name="sld" value="<%= @user.funniness %>" disabled></p>
          </div>

        </div>

      </div>
    </div>

  </div>
</div>








