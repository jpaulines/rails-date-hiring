
<div class="container">
  <div class="row">
    <!-- show the event_image -->
    <!-- show the tags for event_category (model not created yet) on the image -->
    <!-- show event details below-->
      <!--
       t.string "name"
       t.string "location"
       t.date "date"
       t.string "amenities"
       t.string "event_description"
       t.string "wishlist"
       t.string "cost"
      -->
    <div class="col-12 col-lg-6">
      <%= cl_image_tag(@last_event.event_image.url)%>
      <h2><%= @event.name %></h2>
      <p>at <%= @event.location %> on <%= @event.date %></p>
      <h3>About the event</h3>
      <p><%= @event.event_description %></p>
      <h4>What's included:</h4>
      <p><%= @event.amenities %></p>
      <h4>Looking for:</h4>
      <p><%= @event.wishlist %></p>
      <h4>Cost:</h4>
      <p><%= @event.cost %> $</p>
    </div>
    <!-- show booking new-->
    <!-- form motivation field -->
    <!-- form button submit -->
      <!--
         t.bigint "user_id"
         t.bigint "event_id"
         t.boolean "approved"
         t.string "motivation"
      -->

    <div class="col-12 col-lg-2">
      <% if @event.bookings.where(user_id: current_user.id).empty? %>
        <%= simple_form_for [@event, @booking] do |f| %>
          <%= f.input :motivation %>
          <%= f.submit "Book this event", class: "btn custom" %>
        <% end %>
      <% else %>
        <p id="booked-box">You have booked this event</p>
      <% end %>
    </div>
    <!-- show on right side user_id -->
    <!-- show avatar profile_image -->
      <!--
         t.string "first_name"
         t.string "last_name"
         t.string "city"
         t.string "description"
         t.string "height"
         t.string "strength"
         t.string "language"
         t.string "hidden_talent"
         t.integer "talkativeness"
         t.integer "funniness"
         t.string "username"
         t.integer "age"
         t.string "gender"
       -->
    <div class="col-12 col-lg-4 border">
      <div class="d-flex justify-content-start">
        <%= image_tag @user.profile_image, {class: "rounded-circle", width: 70, height: 70} %>
        <div>
          <h4><%= @user.username.capitalize %></h4>
          <p><%= @user.city %></p>
        </div>
      </div>
      <hr>
      <p class="font-weight-bold">About me</p>
      <p><%= @user.description %></p>
      <p>Height:
        <span class="font-weight-lighter"> <%= @user.height %>m</span>
      </p>
      <p>Attributes:
        <span class="font-weight-lighter"> <%= @user.strength %> </span>
      </p>
      <p>Languages:
        <span class="font-weight-lighter"><%= @user.language %> </span>
      </p>
      <p>Hidden Talent:
        <span class="font-weight-lighter"><%= @user.hidden_talent %></span>
      </p>
      <p>Talkativeness:
        <span class="font-weight-lighter"><%= @user.talkativeness %></span>
      </p>
      <p>Funniness:
        <span class="font-weight-lighter"><%= @user.funniness%> </span>
      </p>
      <p>Age:
        <span class="font-weight-lighter"><%= @user.age %></span>
      </p>
    </div>

  </div>
</div>








